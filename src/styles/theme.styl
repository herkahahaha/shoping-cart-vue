

// base colors

$orangePrimary = #FF8A00
$lightPink = #FFFAE6
$successGreen = #1BD97B
$darkNavy = #2D2A40
$Grey = #CCCCCC
$smoothGrey = #EEEEEE
$lightGrey = #D8D8D8
$light = #FFFFFF
$dark = #000000


// breakepoint for media

$sm = 576px
$md = 768px
$lg = 992px
$xl = 1100px

media-breakpoint-up(nSize)
  condition = 'screen and (min-width: %s)' % nSize
  @media condition
    {block}

media-breakpoint-down(nSize)
  condition = 'screen and (max-width: %s)' % nSize
  @media condition
    {block}

column(colSize)
  max-width 100%/colSize

// payment button 
payBtn()
    background: $orangePrimary;
    color: $light;
    border: none;
    outline: none;
    width: 100%;
    padding: 20px;
    margin-top: 20px;
    font-size: 1.25rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
    &:hover 
      opacity: 0.9
    
// Heading section
title(size)
    font-size: size;
    line-height: 44px;
    font-weight: 500;
    color: $orangePrimary;
    margin-bottom: -22px;
    margin-top: 0px;
    text-align: left;

// line
lines(minWidth)
    min-width: minWidth;
    background: $lightGrey;
    width: 100%;
    height: 8px;
    border: none;
    z-index: 12;

// animate Delivery Input
anime(from, to, scale, valOpa)
  transform: translate(from, to) scale(scale);
  opacity: valOpa;